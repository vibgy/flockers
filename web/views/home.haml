!!!
%html{:lang => "en"}
  %head
    %title Event Planner
    %link{:href => "../assets/css/bootstrap.css", :rel => "stylesheet"}
  %body
    .container
      %h1 Flockers
      %button.btn.btn-success.btn-lg{"data-target" => "#signInModal", "data-toggle" => "modal"} Sign In
      %button.btn.btn-primary.btn-lg{"data-target" => "#signUpModal", "data-toggle" => "modal"} Sign Up
      %p#Welcome{:style => 'visibility : hidden'} Welcome User
      %p#InvalidUser{:style => 'visibility : hidden'}Incorrect Username And Password
      %p#SuccessfulSignup{:style => 'visibility : hidden'}You have signed up successfully
      %div#PublicEvent.row
        - unless @he.empty?
          - @he.each do |he|
            %div.col-md-4
              %h2
                %a{:href => ""}= he.ename
              %label Date:
              %label{}= he.date
              %label Time:
              %label{}= he.time
              %label Place: 
              %label{}= he.place
              %label Fees : 
              %label{}= he.fees
              %label Prize: 
              %label{}= he.prize
              %label Description: 
              %label{}= he.description
              %br
              %a.btn.btn-default{:href => "", :role => "button"} Participate
      #signInModal.modal.fade.hide
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
          %h4.modal-title Sign In
        .modal-body
          %form                    
            %label Username
            %input{:name => "uname", :placeholder => "Email address",:type => "text"}
                      
            %label Password
            %input{:name => "pwd", :placeholder => "Password",:type => "password"}
                          
            %label.checkbox
            %input{:type => "checkbox", :value => "remember-me"}
            Remember me
            %button#show.btn.btn-large.btn-primary{:'data-dismiss' => "modal",:onclick => " return login(uname.value,pwd.value)", :type => "submit"} Sign In              
        .modal-footer
          Not Yet Registered  
      #signUpModal.modal.fade.hide
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
          %h4.modal-title Sign Up
        .modal-body
          %form                  
            %label Username
            %input{:name => "uname", :placeholder => "Email address",:type => "text"}
                      
            %label Create Password
            %input{:name => "pwd", :placeholder => "Create Password",:type => "password"}
            
            %label Confirm Password
            %input{:name => "confirmpwd", :placeholder => "Confirm Password",:type => "password"}
            
            %br              
            
            %button#show.btn.btn-large.btn-primary{:'data-dismiss' => "modal",:onclick => " return signup(uname.value,pwd.value,confirmpwd.value)", :type => "submit"} Sign Up               
    %script{:src => "../assets/js/login.js"}
    %script{:src => "../assets/js/jquery.min.js"}
    %script{:src => "../assets/js/bootstrap.min.js"} 
    %script{:src => "../assets/js/register.js"} 

