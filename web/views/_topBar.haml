%header.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse" , :type => "button" ,  "data-toggle" => "collapse" }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"}=SiteConfig.title
    .navbar-collapse.collapse
      %ul#events.nav.navbar-nav
        %li
          %a{:"data-bind" => "click : showMyEvents"}My Events
        %li
          %a{:"data-bind" => "click : showParticipationEvents"}Participated Events
        %li
          %a{:"data-bind" => "click : getTopEvents"}Top Trends
      %ul#user.nav.navbar-nav.navbar-right
        - unless @user.nil? or @user == ''
          %li
            %a{:href => '/loggedIn'}
              Create Flock
          %li.dropdown
            / This href is very important here, otherwise this does not work on iphone
            %a.dropdown-toggle{:href => "#", :"data-toggle"=>'dropdown'}
              %span.glyphicon.glyphicon-user
              %b.caret
            %ul.dropdown-menu
              %li
                %a
                  Welcome!
                  %p
                    #{@user}
              %li.divider
              %li
                %a{:href => '/me'} Profile
              %li
                %a{:"data-bind" => "click: signout"} Sign Out
        - else
          %li
            %form.navbar-form.navbar-right{:role => "form"}
              .form-group
                %input.form-control{:style => "height:30px;",:"data-bind" => "value : uname", :placeholder => "Email address",:type => "text"}
              .form-group
                %input.form-control{:style => "height:30px;",:"data-bind" => "value : pas", :placeholder => "Password",:type => "password"}
              %button.btn.btn-success{:"data-bind" => "click : login"} Sign in
              %button.btn.btn-primary{"data-target" => "#signUpModal", "data-toggle" => "modal"} Sign Up
%div{:id => 'msg'}
