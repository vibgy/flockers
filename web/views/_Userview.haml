.panel.panel-default
  .panel-heading
    %a{:"data-toggle" => "collapse",:"data-parent" => "#accordion",:"data-bind" => 'attr: {href : "#"+$index()}'}
      .row
        .col-md-5
          %h4{:"data-bind" => "text : Name()"}
        .col-md-5
          %h4{:"data-bind" => "text : college()"}
        .col-md-2
          %h4{:"data-bind" => "text : $root.topgameProfiles()[$index()].points()"}
  .panel-collapse.collapse{:"data-bind" => 'attr: {id : $index}'}
    .panel-body
      .row
        .col-md-3
          %p
            Email
        .col-md-2
          %p{:'data-bind' => "text: email()"}
        .col-md-2.col-md-offset-3
          %p
            Gender
        .col-md-2
          %p{:'data-bind' => "text: gender()"}
      .row
        .col-md-3
          %p
            Contact number
        .col-md-2
          %p{:'data-bind' => "text: phone()"}
        .col-md-2.col-md-offset-3
          %p
            Semester
        .col-md-2
          %p{:'data-bind' => "text: semester()"}
      .row
        .col-md-3
          %p
            About:
        .col-md-4
          %p{:'data-bind' => "text: description()"}
      .row
        .col-md-4
          %div
            %button.btn.btn-primary{ :'data-bind' => "click: $parent.showParticipatedFlocks"}Flocks Participated       
        .col-md-4.col-md-offset-1
          %div
            %button.btn.btn-primary Flocks Created       
        .col-md-2
          %div
            %button.btn.btn-primary{ "data-bind" => 'attr: {"data-target" : "#1"+$index()}', "data-toggle" => "modal"}See Badges 
.modal.fade{"aria-hidden" => "true", "data-bind" => 'attr: {"aris-labeledby" : "#1"+$index()}',:role => "dialog" ,:tabindex => "-1",:"data-bind" => 'attr: {id : "1"+$index()}'}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4.modal-title Badges Owned
      .modal-body
        %ul.list-group{:'data-bind' => "foreach:$root.topgameProfiles()[$index()].badges"}
          %li.list-group-item.text-center{:'data-bind' => "text : $data"}

