.col-md-4
  .panel.panel-primary
    .panel-heading
      %h3{:"data-bind" => "text: ename()"}
    .panel-body
      %p{:"data-bind" => "text: description()"}
      %div{:"data-bind" => "text: 'When: ' + date()"}
      %div{:"data-bind" => "text: 'Where: ' + place()"}
      /%p{:"data-bind" => "astext: fees()"}
      /%p{:"data-bind" => "text: prize()"}
      /%p{:"data-bind" => "text: time()"}
      %button.btn.btn-primary{:'data-bind' =>'click : function() { $root.participate(id());}'}Participate
      /%a.btn.btn-primary.pull-right{"data-target" => "#signInModal", "data-toggle" => "modal",:"data-bind" => "click : participateVar"}Participate
      /%button.btn-primary{:"data-bind" => "click : DeleteEvent"}Delete Me
      /%button.btn-primary{:"data-bind" => "click : deleteParticipateEvent"}Delete Me
