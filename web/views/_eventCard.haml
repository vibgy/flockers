.col-md-3
  .panel.panel-primary
    .panel-heading
      %h3{:"data-bind" => "text: ename()"}
    .panel-body
      %p{:"data-bind" => "text: description()"}
      %div{:"data-bind" => "text: 'When: ' + date()"}
      %div{:"data-bind" => "text: 'Where: ' + place()"}
      /%p{:"data-bind" => "astext: fees()"}
      /%p{:"data-bind" => "text: prize()"}
      /%p{:"data-bind" => "text: time()"}
    .panel-footer
      %button#option.btn.btn-primary.btn-lg{:style => "width:40%", 'data-bind' =>'click: details'} Details
      %button#option.btn.btn-primary.btn-lg{:style => "width:58%", 'data-bind' =>'click: participate'} Participate
      /%button#delete.btn.btn-primary{:"data-bind" => "click : DeleteEvent"}Delete Me
      /%button#deleteParticipation.btn-primary{:"data-bind" => "click : deleteParticipateEvent"}Delete Me
